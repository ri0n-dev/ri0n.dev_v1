<style>
	* {
		margin: 0;
		padding: 0;
	}

	html,
	body {
		height: 100%;
		overflow-y: scroll;

		scroll-behavior: smooth;

		&::-webkit-scrollbar {
			display: none;
		}

		-ms-overflow-style: none;
		scrollbar-width: none;
	}

	body {
		font-family: "Noto Sans JP", sans-serif;
		margin: 0;
		padding: 0;
		min-height: 100vh;
		overflow-x: hidden;
	}

	a {
		text-decoration: none;
		color: #dbe6e3;
	}
</style>
