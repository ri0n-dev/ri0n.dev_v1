---
import "../styles/global.css";
---

<div class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg w-full">
	<div class="flex items-center space-x-4">
		<img src="/assets/icon.jpg" alt="Me Icon" class="w-12 h-12 rounded-lg" />
		<div>
			<p class="text-lg font-semibold">Rion</p>
			<p class="text-sm text-gray-500">Web Developer</p>
		</div>
	</div>
	<div class="flex space-x-3 sns">
		<a href="#" class="text-gray-500 hover:text-gray-600">
			<i class="bi bi-twitter-x"></i>
		</a>
		<a href="#" class="text-gray-500 hover:text-gray-600">
			<i class="bi bi-github"></i>
		</a>
		<a href="#" class="text-gray-500 hover:text-gray-600">
			<i class="bi bi-discord"></i>
		</a>
	</div>
</div>

<style>
	.sns {
		font-size: 22.5px;
	}

	@media screen and (max-width: 768px) {
		.sns {
			font-size: 19px;
		}
	}

	@media screen and (max-width: 640px) {
		.sns {
			font-size: 17px;
		}
		
	}
</style>